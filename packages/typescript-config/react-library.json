{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json", 
  "compilerOptions": {

    "target": "es2020",
    "module": "esnext",
    "jsx": "react-jsx",

    "rootDir": "./src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",

    "declaration": true, 
    "declarationMap": true
  }
}